{
    "manifest_version": 2,
    "name": "DnD Spell Approval",
    "description": "A Chrome extension to auto-fill PR approval comments with random D&D 5e spells.",
    "version": "1.0",
    "permissions": [
        "activeTab"
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Open the popup"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    }
}

